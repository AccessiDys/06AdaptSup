// couleurs importÃ© de boostrap
buttonColor = white
buttonBgColor = #3276b1
buttonBgColorHover = #3276b1
siteFont = "Helvetica Neue",Helvetica,Arial,sans-serif

tailleIcone = 48px


// reset
*
	border 0
	margin 0
	padding 0
	outline 0
	font-family siteFont

body
	background-color white
	color #333

.dropdown:hover .dropdown-menu
	display block


ul
	margin-left 20px

.book
	font-weight bold

input, select
	width 100%

input[type="checkbox"]
	width 20px

img
	max-width 100%

.col-sm-12
	clear both



ul
	margin-left 0
	margin-bottom 10px
	list-style none

epaisseurBordure = 1px
#bar-outil
	position fixed
	top 50px
	left 0
	bottom 0
	background-color #eee
	width 49px
	border-right 1px solid black

	li
		clear both
		border epaisseurBordure solid black
		border-left 0
		width tailleIcone
		height tailleIcone + epaisseurBordure
		margin-top - epaisseurBordure
		label
			display block
		label > img, > img
			padding (tailleIcone/6)
			cursor pointer
			width 100%
			height 100%
	input
		display none
	li ul
		display none
		position absolute
		top 250px

	li input:checked ~ ul
		display block

.multi-icones

	> *
		position absolute
		display block
	> img
		margin 2px
		width tailleIcone + (-2*@margin)
		height tailleIcone + (-2*@margin)
	> img:first-child
		width (2*tailleIcone/3)
		height (2*tailleIcone/3)
		margin (tailleIcone/6)

.bar-nav
	position fixed
	top 50px
	left 49px
	right 0px
	background-color #eee
	height 49px
	border-bottom 1px solid black
	li
		display inline-block
		clear both
		border epaisseurBordure solid black
		border-left 0
		width tailleIcone
		height tailleIcone + epaisseurBordure
		margin-top - epaisseurBordure
		> img
			padding (tailleIcone/6)
			cursor pointer
			width 100%
			height 100%
