buttonColor = white
buttonBgColor = #3276b1
buttonBgColorHover = #3276b1
siteFont = "Helvetica Neue",Helvetica,Arial,sans-serif

tailleIcone = 48px


// reset
*
	border 0
	margin 0
	padding 0
	outline 0
	font-family siteFont

body
	background-color white
	color #333

.dropdown:hover .dropdown-menu
	display block


ul
	margin-left 20px

.book
	font-weight bold

input, select
	width 100%

input[type="checkbox"]
	width 20px

img
	max-width 100%

.col-sm-12
	clear both


epaisseurBordure = 1px
#bar-outil
	position fixed
	top 50px
	left 0

	ul
		margin-left 0
		list-style none

	li
		clear both
		> *
			border epaisseurBordure solid black
			border-left 0
			width tailleIcone
			height tailleIcone + epaisseurBordure
			margin-top - epaisseurBordure
			float left
			display none
			&:first-child
				display block
				border-top 0
				height tailleIcone
				margin-top 0
		&:hover > *
			display block

		> img
			padding (tailleIcone/6)

.multi-icones

	> *
		position absolute
		display block
	> img
		margin 2px
		width tailleIcone + (-2*@margin)
		height tailleIcone + (-2*@margin)
	> img:first-child
		width (2*tailleIcone/3)
		height (2*tailleIcone/3)
		margin (tailleIcone/6)

